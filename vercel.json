{
  "version": 2,
  "rewrites": [
    { "source": "/apps/modo/start.html",      "destination": "/start.html" },
    { "source": "/apps/modo/start",           "destination": "/start.html" },
    { "source": "/start.html",                "destination": "/start.html" },
    { "source": "/start",                     "destination": "/start.html" },

    { "source": "/apps/modo/health",          "destination": "/api/health" },
    { "source": "/health",                    "destination": "/api/health" },

    { "source": "/apps/modo/payment-request", "destination": "/api/modo/payment-request" },
    { "source": "/payment-request",           "destination": "/api/modo/payment-request" },

    { "source": "/apps/modo/status",          "destination": "/api/modo/status" },
    { "source": "/status",                    "destination": "/api/modo/status" },
    { "source": "/apps/modo/status/:id*",     "destination": "/api/modo/status?id=:id" },
    { "source": "/status/:id*",               "destination": "/api/modo/status?id=:id" },

    { "source": "/apps/modo/shopify/:path*",  "destination": "/api/shopify/:path*" },
    { "source": "/shopify/:path*",            "destination": "/api/shopify/:path*" }
  ]
}

