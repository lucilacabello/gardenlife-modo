{
  "version": 2,
  "routes": [
    { "src": "/health",                   "dest": "/api/health" },
    { "src": "/qr",                       "dest": "/api/qr" },
    { "src": "/status",                   "dest": "/api/status.js" },

    { "src": "/apps/modopay/start",       "dest": "/apps/modopay/start.html" },
    { "src": "/apps/modopay/health",      "dest": "/api/health" },
    { "src": "/apps/modopay/status",      "dest": "/api/status.js" },

    { "src": "/api/proxy/health",         "dest": "/api/health" },
    { "src": "/api/proxy/start.html",     "dest": "/apps/modopay/start.html" },
    { "src": "/api/proxy/qr",             "dest": "/api/qr" },
    { "src": "/api/proxy/status/(.*)",    "dest": "/api/status.js?id=$1" },

    { "src": "/api/proxy/(.*)",           "dest": "/api/proxy.js" },
    { "src": "/api/(.*)",                 "dest": "/api/$1" }
  ]
}
