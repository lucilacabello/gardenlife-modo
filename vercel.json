{
  "version": 2,
  "rewrites": [
    {
      "source": "/apps/modo/shopify/:path*",
      "destination": "/api/shopify/:path*"
    },
    {
      "source": "/apps/modopay/start",
      "destination": "/apps/modopay/start.html"
    },
    {
      "source": "/apps/modopay/payment-request",
      "destination": "/api/modo/payment-request"
    },
    {
      "source": "/apps/modopay/status",
      "destination": "/api/modo/status"
    },
    {
      "source": "/apps/modopay/status/:id*",
      "destination": "/api/modo/status?id=:id"
    },
    {
      "source": "/apps/modo/start",
      "destination": "/apps/modo/start.html"
    },
    {
      "source": "/apps/modo/payment-request",
      "destination": "/api/modo/payment-request"
    },
    {
      "source": "/apps/modo/status",
      "destination": "/api/modo/status"
    },
    {
      "source": "/apps/modo/status/:id*",
      "destination": "/api/modo/status?id=:id"
    },
    {
      "source": "/apps/(modopay|modo)/health",
      "destination": "/api/health"
    },
    {
      "source": "/apps/modopay/shopify/:path*",
      "destination": "/api/shopify/:path*"
    },
    {
      "source": "/start",
      "destination": "/apps/modopay/start.html"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}

