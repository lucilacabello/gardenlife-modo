{
  "version": 2,
  "routes": [
    // archivos estáticos que querés exponer (tu start.html en /public)
    { "src": "/start.html",                "dest": "/start.html" },

    // endpoints "limpios" que llegarán desde el proxy de Shopify
    { "src": "/health",                    "dest": "/api/health" },
    { "src": "/shopify/draft-create",      "dest": "/api/shopify/draft-create" },
    { "src": "/modo/payment-request",      "dest": "/api/modo/payment-request" },
    { "src": "/modo/modo-webhook",         "dest": "/api/modo-webhook" },

    // fallback para cualquier otra ruta de API
    { "src": "/api/(.*)",                  "dest": "/api/$1" }
  ]
}
