{
  "version": 2,
  "routes": [
    { "src": "^/apps/modo/start(\\.html)?$",     "dest": "/start.html" },

    { "src": "^/apps/modo/health$",              "dest": "/api/health" },
    { "src": "^/apps/modo/payment-request$",     "dest": "/api/modo/payment-request" },
    { "src": "^/apps/modo/status$",              "dest": "/api/modo/status" },
    { "src": "^/apps/modo/status/(.*)$",         "dest": "/api/modo/status?id=$1" },
    { "src": "^/apps/modo/shopify/(.*)$",        "dest": "/api/shopify/$1" },

    { "src": "^/start(\\.html)?$",               "dest": "/start.html" },
    { "src": "^/health$",                        "dest": "/api/health" },
    { "src": "^/payment-request$",               "dest": "/api/modo/payment-request" },
    { "src": "^/status$",                        "dest": "/api/modo/status" },
    { "src": "^/status/(.*)$",                   "dest": "/api/modo/status?id=$1" },
    { "src": "^/shopify/(.*)$",                  "dest": "/api/shopify/$1" }
  ]
}

